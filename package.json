{
  "name": "mcoda",
  "version": "0.1.18",
  "description": "Local-first CLI for planning, documentation, and execution workflows with agent assistance.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bekirdag/mcoda.git"
  },
  "bugs": {
    "url": "https://github.com/bekirdag/mcoda/issues"
  },
  "homepage": "https://github.com/bekirdag/mcoda#readme",
  "license": "MIT",
  "author": "bekir dag",
  "keywords": [
    "mcoda",
    "cli",
    "planning",
    "backlog",
    "agent",
    "documentation",
    "openapi",
    "pdr",
    "sds"
  ],
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:all": "pnpm -r run build && npm -g install ./packages/cli ./packages/codali",
    "lint": "pnpm -r run lint",
    "test": "node tests/all.js",
    "test:repo": "node --input-type=module -e \"process.env.MCODA_SKIP_WORKSPACE_TESTS='1'; import('./tests/all.js');\"",
    "test:workspaces": "pnpm -r run test"
  },
  "pnpm": {
    "overrides": {
      "tar": "7.5.8",
      "minimatch": "10.2.1",
      "axios": "1.13.5",
      "systeminformation": "5.31.0"
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "ava": "^6.4.1",
    "chai": "^6.2.2",
    "cypress": "^15.9.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "mocha": "^11.7.5",
    "nock": "^14.0.10",
    "prettier": "^3.2.5",
    "puppeteer": "^24.36.0",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
