{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@mcoda/shared": ["packages/shared/src/index.ts"],
      "@mcoda/shared/*": ["packages/shared/src/*"],
      "@mcoda/db": ["packages/db/src/index.ts"],
      "@mcoda/db/*": ["packages/db/src/*"],
      "@mcoda/agents": ["packages/agents/src/index.ts"],
      "@mcoda/agents/*": ["packages/agents/src/*"],
      "@mcoda/integrations": ["packages/integrations/src/index.ts"],
      "@mcoda/integrations/*": ["packages/integrations/src/*"],
      "@mcoda/core": ["packages/core/src/index.ts"],
      "@mcoda/core/*": ["packages/core/src/*"],
      "@mcoda/generators": ["packages/generators/src/index.ts"],
      "@mcoda/generators/*": ["packages/generators/src/*"],
      "@mcoda/cli": ["packages/cli/src/index.ts"],
      "@mcoda/cli/*": ["packages/cli/src/*"],
      "@mcoda/testing": ["packages/testing/src/index.ts"],
      "@mcoda/testing/*": ["packages/testing/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
